#!/usr/bin/env node

// Require libraries
var fs = require('fs'),
    path = require('path'),
    cli = require('commander');

var packageConfig = JSON.parse(fs.readFileSync(path.join(__dirname, '../package.json'), 'utf8'));

cli.version(packageConfig.version);

cli.command('init [directory-name]')
   .description('initalize and setup directories')
   .action(function(directoryName, options) {
    });

cli.parse(process.argv);
